<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Votre Profil</title>
    <link rel="stylesheet" href="/css/bulma.min.css">
</head>
<body>
    <section class="hero is-info">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">Votre Profil</h1>
                <h2 class="subtitle">Bienvenue, <%= user.username %> !</h2>
            </div>
        </div>
    </section>

    <div class="container">
        <h3 class="title">Flag</h3>
        <div id="flag" class="notification is-primary">
            Chargement du flag...
        </div>

        <div class="field">
            <div class="control">
                <a class="button is-light" href="/logout">Déconnexion</a>
            </div>
        </div>
    </div>

    <script>
        // Récupérer le flag depuis le serveur
        fetch('/flag')
            .then(response => {
                if (response.ok) {
                    return response.text();
                }
                throw new Error('Échec de la récupération du flag');
            })
            .then(flag => {
                document.getElementById('flag').innerText = flag;
            })
            .catch(error => {
                document.getElementById('flag').innerText = 'Erreur lors de la récupération du flag : ' + error.message;
            });
    </script>
</body>
</html>

